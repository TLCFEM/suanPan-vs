{
  "name": "suanpan",
  "displayName": "suanPan",
  "description": "Syntax highlighting and autocompletion for suanPan models",
  "icon": "images/suanPan-ua.png",
  "author": {
    "name": "Theodore Chang",
    "email": "tlcfem@gmail.com"
  },
  "pricing": "Free",
  "publisher": "tlc",
  "repository": {
    "type": "git",
    "url": "https://github.com/TLCFEM/suanPan-vs"
  },
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:suanPan"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "suanPan",
      "properties": {
        "suanpan.path": {
          "type": "string",
          "default": "",
          "description": "Path to the suanPan executable."
        },
        "suanpan.directory": {
          "type": "string",
          "default": "",
          "description": "Working directory, leave empty to use the folder of the model file."
        },
        "suanpan.color": {
          "type": "boolean",
          "default": true,
          "description": "Colorized output."
        },
        "suanpan.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Verbose output."
        }
      }
    },
    "commands": [
      {
        "command": "suanpan.run",
        "title": "suanPan: Run this model in suanPan"
      }
    ],
    "languages": [
      {
        "id": "suanPan",
        "aliases": [
          "suanPan"
        ],
        "extensions": [
          ".sp",
          ".supan"
        ]
      }
    ],
    "grammars": [
      {
        "language": "suanPan",
        "scopeName": "source.sp",
        "path": "./syntaxes/.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "suanPan",
        "path": "./syntaxes/snippets.json"
      },
      {
        "language": "suanPan",
        "path": "./syntaxes/sections.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  }
}